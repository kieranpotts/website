{
  "private": true,
  "description": "Development dependencies and workflow automation scripts.",
  "engines": {
    "node": ">=14.15.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "autoprefixer": "^10.2.4",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "luxon": "^1.25.0",
    "netlify-cli": "^3.7.1",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build": "cross-env ELEVENTY_ENV=production yarn run clean && eleventy --config=eleventy.config.js",
    "clean": "rimraf ./dist",
    "dev:start": "cross-env ELEVENTY_ENV=development eleventy --config=eleventy.config.js --serve",
    "dev:serve": "netlify dev",
    "prod:styles": "node-sass src/assets/styles/ --output dist/assets/styles/ && postcss ./dist/assets/styles/*.css --replace",
    "dev:styles": "node-sass src/assets/styles/ --output dist/assets/styles/ --source-map true --source-map-contents true && postcss ./dist/assets/styles/*.css --replace",
    "test": "echo \"Error: no tests specified\" && exit 1"
  }
}
