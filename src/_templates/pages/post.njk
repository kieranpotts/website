{% extends "pages/base.njk" %}

{% block content %}

  <h1>{{ title }}</h1>

  {% if date %}<p class="time"><time datetime="{{ date | dateymd }}">{{ date | datefriendly }}</time></p>{% endif %}

  <p class="words">{{ content | wordcount | readtime }}</p>

  {{ content | safe }}

  {% set nextPost = collections.blogposts | getNextCollectionItem(page) %}
  {% if nextPost %}<p>Next blogpost: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></p>{% endif %}

  {% set previousPost = collections.blogposts | getPreviousCollectionItem(page) %}
  {% if previousPost %}<p>Previous blogpost: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></p>{% endif %}

{% endblock %}
