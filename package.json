{
  "private": true,
  "description": "Development dependencies and workflow automation scripts.",
  "engines": {
    "node": ">=14.15.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "light-server": "^2.9.1",
    "luxon": "^1.25.0",
    "netlify-cli": "^3.7.1",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "scripts": {
    "clean": "rimraf dist",

    "dev": "netlify dev",
    "dev:start": "concurrently \"yarn run dev:serve\" \"yarn run dev:build:pages\" \"yarn run dev:build:scripts\" \"yarn run dev:build:styles\"",
    "dev:build": "concurrently \"yarn run dev:build:pages\" \"yarn run dev:build:scripts\" \"yarn run dev:build:styles\"",
    "dev:build:pages": "cross-env ELEVENTY_ENV=development eleventy --config=eleventy.config.js --watch",
    "dev:build:scripts": "webpack --mode=development",
    "dev:build:styles": "postcss src/assets/styles/main.css --output dist/assets/styles/main.css --map --watch",
    "dev:serve": "light-server -c light-server.config.json",

    "prod": "yarn run clean && yarn run prod:build",
    "prod:build": "concurrently \"yarn run prod:build:pages\" \"yarn run prod:build:scripts\" \"yarn run prod:build:styles\"",
    "prod:build:pages": "cross-env ELEVENTY_ENV=production eleventy --config=eleventy.config.js",
    "prod:build:scripts": "webpack --mode=production",
    "prod:build:styles": "postcss src/assets/styles/main.css --output dist/assets/styles/main.css",

    "test": "echo \"Error: no tests specified\" && exit 1"
  }

}
